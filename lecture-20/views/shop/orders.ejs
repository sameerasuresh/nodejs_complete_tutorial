    <body>
        <%- include('../includes/navigation.ejs')  %> 
        <main>
            <% if (orders.length <= 0){ %> 
                <h1>Nothing there!</h1>
            <% } else { %> 
                <% orders.forEach(order => { %>
                    <ul>
                        <h1># <%= order._id  %> </h1>
                        - <a href="/orders/<%= order._id %> ">Invoice</a>
                        <ul>
                            <% order.products.forEach(p => { %>
                                <li><%= p.product.title %> ( <%= p.quantity %> ) </li>
                            <% }) %>
                        </ul>
                    </ul>
                <% }) %>  
            <% } %>
             
        </main>

<%- include('../includes/end.ejs')  %> 
