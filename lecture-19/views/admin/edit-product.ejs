<%- include('../includes/head.ejs')  %> 
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')  %> 
    <main>
        <form class="product-form" action="/admin/<%= editing === false ? 'add-product' : 'edit-product' %> " method="POST">
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= editing != false ? product.title: ''  %>">
            </div>
            <div class="form-control">
                <label for="title">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= editing != false ? product.imageUrl: ''  %>">
            </div>
            <div class="form-control">
                <label for="title">Description</label>
                <textarea name="description" id="description" rows="5"><%= editing != false ? product.description: ''  %></textarea>
            </div>
            <div class="form-control">
                <label for="title">Price</label>
                <input type="number" step="0.01" name="price" id="price" value="<%= editing != false ? product.price: ''  %>">
            </div>
            <% if(editing) { %>
                <input type="hidden" name="id" id="id" value="<%= product._id  %>">
            <% } %>  
            <button class="btn" type="submit"><% if(editing) { %> Update Product<% }else{ %>Add Product<% } %>  </button>
        </form>
    </main>
<%- include('../includes/end.ejs')  %> 